{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["./app.ts", "./controllers/**/*.ts", "./routes/**/*.ts", "./services/**/*.ts"],
  "exclude": ["node_modules", "dist", "../core", "list-builds.ts", "test-tokens.ts"]
}
